<ContentPage
    x:Class="AppMaui.Pages.InventUniPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ðŸš— Inventario de Unidad"
    BackgroundColor="#1E1E1E">

    <Grid
        Padding="15"
        RowDefinitions="Auto,Auto,*"
        RowSpacing="10">
        <!--  Buscador  -->
        <SearchBar
            x:Name="BuscadorEntry"
            Grid.Row="0"
            BackgroundColor="#2D2D30"
            FontSize="16"
            HeightRequest="48"
            Placeholder="Buscar producto..."
            PlaceholderColor="#AAAAAA"
            TextChanged="OnBuscadorTextChanged"
            TextColor="#FFFFFF" />

        <!--  Encabezado  -->
        <Grid
            Grid.Row="1"
            BackgroundColor="#3B3B3B"
            ColumnDefinitions="2*,0.5*,0.5*">
            <BoxView
                Grid.ColumnSpan="3"
                HeightRequest="27"
                Color="#5E35B1" />
            <Button
                BackgroundColor="Transparent"
                BorderWidth="0"
                FontAttributes="Bold"
                FontSize="15"
                HorizontalOptions="Start"
                Text="Producto"
                TextColor="White" />
            <Button
                Grid.Column="1"
                BackgroundColor="Transparent"
                BorderWidth="0"
                FontAttributes="Bold"
                FontSize="15"
                HorizontalOptions="Center"
                Text="DÃ­a"
                TextColor="White" />
            <Button
                Grid.Column="2"
                BackgroundColor="Transparent"
                BorderWidth="0"
                FontAttributes="Bold"
                FontSize="15"
                HorizontalOptions="Center"
                Text="LPZ"
                TextColor="White" />
        </Grid>

        <!--  Lista de productos  -->
        <CollectionView
            x:Name="ProductosCollection"
            Grid.Row="2"
            ItemsSource="{Binding ProductosFiltrados}"
            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="0,6"
                        Padding="10"
                        BackgroundColor="#2D2D30"
                        BorderColor="#512BD4"
                        CornerRadius="6"
                        HasShadow="False">
                        <Grid ColumnDefinitions="2*,0.5*,0.5*">
                            <Label
                                Margin="5,0"
                                FontAttributes="Bold"
                                FontSize="17"
                                Text="{Binding Nombre}"
                                TextColor="#FFFFFF"
                                VerticalOptions="Start" />
                            <Label
                                Grid.Column="1"
                                Margin="5,0"
                                FontSize="17"
                                HorizontalOptions="Center"
                                Text="{Binding Cantidad1}"
                                TextColor="#FFFFFF"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="2"
                                Margin="5,0"
                                FontSize="17"
                                HorizontalOptions="Center"
                                Text="{Binding Cantidad2}"
                                TextColor="#FFFFFF"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>