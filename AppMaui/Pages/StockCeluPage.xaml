<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMaui.Pages.StockCeluPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="🗂️ Inventario"
    BackgroundColor="#1E1E1E">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Clicked="OnMostrarOpciones"
            Order="Primary"
            Priority="0"
            Text="☰" />
    </ContentPage.ToolbarItems>
    <Grid
        Padding="15"
        RowDefinitions="Auto,Auto,*"
        RowSpacing="10">
        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <!--  Buscador  -->
            <SearchBar
                x:Name="BuscadorEntry"
                Grid.Row="0"
                BackgroundColor="#2D2D30"
                FontSize="16"
                HeightRequest="48"
                Placeholder="Buscar producto..."
                PlaceholderColor="#AAAAAA"
                TextChanged="OnBuscadorTextChanged"
                TextColor="#FFFFFF" />
            <!--  Botón Alta  -->
            <Button
                Grid.Column="1"
                Padding="10,3"
                BackgroundColor="#5E35B1"
                Clicked="OnAltaClicked"
                CornerRadius="8"
                FontSize="30"
                Text="+"
                TextColor="White"
                VerticalOptions="Center"
                WidthRequest="50" />
        </Grid>

        <!--  Encabezado  -->
        <Grid
            Grid.Row="1"
            BackgroundColor="#3B3B3B"
            ColumnDefinitions="2*,0.5*,0.5*">
            <BoxView
                Grid.ColumnSpan="3"
                HeightRequest="27"
                Color="#5E35B1" />

            <Button
                BackgroundColor="Transparent"
                BorderWidth="0"
                FontAttributes="Bold"
                FontSize="15"
                HorizontalOptions="Start"
                Text="Producto"
                TextColor="White" />
            <Button
                Grid.Column="1"
                BackgroundColor="Transparent"
                BorderWidth="0"
                FontAttributes="Bold"
                FontSize="15"
                HorizontalOptions="Center"
                Text="T"
                TextColor="White" />
            <Button
                x:Name="UbicacionBtn"
                Grid.Column="2"
                BackgroundColor="Transparent"
                Clicked="OnUbicacionBtnClicked"
                FontAttributes="Bold"
                FontSize="15"
                HorizontalOptions="Center"
                Text="TODO"
                TextColor="White" />
        </Grid>

        <!--  Lista de productos  -->
        <CollectionView
            x:Name="ProductosCollection"
            Grid.Row="2"
            ItemsSource="{Binding ProductosFiltrados}"
            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="0,6"
                        Padding="10"
                        BackgroundColor="#2D2D30"
                        BorderColor="#512BD4"
                        CornerRadius="6"
                        HasShadow="False">
                        <Grid ColumnDefinitions="2*,0.5*,0.5*">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnProductoTapped" />
                            </Grid.GestureRecognizers>
                            <Label
                                Margin="5,0"
                                FontAttributes="Bold"
                                FontSize="17"
                                Text="{Binding Nombre}"
                                TextColor="#FFFFFF"
                                VerticalOptions="Start" />
                            <Label
                                Grid.Column="1"
                                Margin="5,0"
                                FontSize="17"
                                HorizontalOptions="Center"
                                Text="{Binding Total}"
                                TextColor="#FFFFFF"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="2"
                                Margin="5,0"
                                FontSize="17"
                                HorizontalOptions="Center"
                                Text="{Binding CantidadAMostrar}"
                                TextColor="#FFFFFF"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <!--  Overlay de carga  -->
        <Grid
            x:Name="LoadingOverlay"
            Grid.RowSpan="3"
            BackgroundColor="#88000000"
            InputTransparent="False"
            IsVisible="False">

            <ActivityIndicator
                HeightRequest="60"
                HorizontalOptions="Center"
                IsRunning="True"
                VerticalOptions="Center"
                WidthRequest="60"
                Color="#5E35B1" />
        </Grid>

    </Grid>
</ContentPage>