<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMaui.Pages.ABMPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Padding="40"
    BackgroundColor="#00000080"
    HeightRequest="405"
    NavigationPage.HasNavigationBar="False"
    WidthRequest="435">

    <Border
        Padding="20"
        BackgroundColor="#1E1E1E"
        Stroke="#5E35B1"
        StrokeShape="RoundRectangle 16"
        StrokeThickness="2">
        <VerticalStackLayout Spacing="13">
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                Text="{Binding Titulo}"
                TextColor="White" />
            <Entry
                x:Name="NombreEntry"
                Margin="0,20,0,20"
                BackgroundColor="#2D2D30"
                Placeholder="Nombre del producto"
                TextColor="White" />
            <Entry
                x:Name="ObservacionEntry"
                BackgroundColor="#2D2D30"
                Placeholder="Observaciones"
                TextColor="White" />

            <!--  Campo Cantidad 1  -->
            <Label
                FontSize="14"
                IsVisible="{Binding MostrarCantidad}"
                Text="Stock DÃ­a"
                TextColor="White" />
            <Entry
                x:Name="CantidadEntry"
                BackgroundColor="#2D2D30"
                IsVisible="{Binding MostrarCantidad}"
                Keyboard="Numeric"
                Placeholder="0"
                TextColor="White" />

            <!--  Campo Cantidad 2  -->
            <Label
                FontSize="14"
                IsVisible="{Binding MostrarCantidad}"
                Text="Stock LPZ"
                TextColor="White" />
            <Entry
                x:Name="CantidadEntry2"
                BackgroundColor="#2D2D30"
                IsVisible="{Binding MostrarCantidad}"
                Keyboard="Numeric"
                Placeholder="0" />

            <HorizontalStackLayout
                Margin="0,10,0,0"
                HorizontalOptions="Center"
                Spacing="20">
                <Button
                    BackgroundColor="#888"
                    Clicked="OnCancelarClicked"
                    Text="Cancelar"
                    TextColor="White"
                    WidthRequest="120" />
                <Button
                    BackgroundColor="#5E35B1"
                    Clicked="OnConfirmarClicked"
                    Text="{Binding BotonTexto}"
                    TextColor="White"
                    WidthRequest="120" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</ContentPage>