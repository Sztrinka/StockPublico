<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="AppMaui.Popups.ExportarStockPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Border
        Padding="24"
        BackgroundColor="#1E1E1E"
        HeightRequest="240"
        Stroke="#5E35B1"
        StrokeShape="RoundRectangle 12"
        StrokeThickness="2"
        WidthRequest="400">

        <VerticalStackLayout Spacing="24" VerticalOptions="Center">
            <Label
                x:Name="lblTitulo"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalTextAlignment="Center"
                Text="¿Qué depósito desea exportar?"
                TextColor="White" />

            <Picker
                x:Name="DepositoPicker"
                Title="Seleccionar depósito"
                BackgroundColor="#2D2D30"
                FontSize="16"
                SelectedIndex="0"
                TextColor="White">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Todo el stock</x:String>
                        <x:String>Taller</x:String>
                        <x:String>Movil 1</x:String>
                        <x:String>Movil 2</x:String>
                        <x:String>Movil 3</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="12">
                <Button
                    BackgroundColor="#5E35B1"
                    Clicked="OnAceptarClicked"
                    FontSize="16"
                    HeightRequest="45"
                    Text="Aceptar"
                    TextColor="White"
                    WidthRequest="140" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
