<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="AppMaui.Popups.AjusteStockPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Border
        Padding="20"
        BackgroundColor="#1E1E1E"
        Stroke="#5E35B1"
        StrokeShape="RoundRectangle 16"
        StrokeThickness="2">
        <VerticalStackLayout Spacing="16">

            <!--  TÃ­tulo  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalTextAlignment="Center"
                Text="ðŸ”§ Ajustar Stock"
                TextColor="White" />

            <!--  Nombre del producto  -->
            <Label
                Margin="0,-10,0,0"
                FontSize="16"
                HorizontalTextAlignment="Center"
                Text="{Binding Nombre}"
                TextColor="#CCCCCC" />

            <!--  Stock DÃ­a  -->
            <Label
                FontSize="14"
                Text="Stock DÃ­a"
                TextColor="White" />
            <Entry
                x:Name="DiaEntry"
                BackgroundColor="#2D2D30"
                Keyboard="Numeric"
                Placeholder="Ingrese cantidad DÃ­a"
                Text="{Binding Cantidad1}"
                TextColor="White" />

            <!--  Stock LPZ  -->
            <Label
                Margin="0,8,0,0"
                FontSize="14"
                Text="Stock LPZ"
                TextColor="White" />
            <Entry
                x:Name="LpzEntry"
                BackgroundColor="#2D2D30"
                Keyboard="Numeric"
                Placeholder="Ingrese cantidad LPZ"
                Text="{Binding Cantidad2}"
                TextColor="White" />

            <!--  Botones  -->
            <HorizontalStackLayout
                Margin="0,16,0,0"
                HorizontalOptions="Center"
                Spacing="12">

                <Button
                    BackgroundColor="Gray"
                    Clicked="OnCancelarClicked"
                    Text="Cancelar"
                    TextColor="White"
                    WidthRequest="120" />

                <Button
                    BackgroundColor="#5E35B1"
                    Clicked="OnConfirmarClicked"
                    Text="Confirmar"
                    TextColor="White"
                    WidthRequest="120" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>